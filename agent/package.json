{
  "name": "shift-close-agent",
  "version": "1.0.0",
  "description": "Shift Close local attendance agent â€” syncs ZKTeco device with cloud",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node src/index.js",
    "electron": "electron electron/main.js",
    "build": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win --x64",
    "build:package": "electron-packager . \"Shift Close Agent\" --platform=win32 --arch=x64 --out=dist --overwrite --ignore=node_modules/@electron/packager --prune=true",
    "build:mac": "electron-builder --mac"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^2.7.0",
    "zk-attendance-sdk": "^2.1.0"
  },
  "devDependencies": {
    "@electron/packager": "^19.0.5",
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.westline.shiftclose.agent",
    "productName": "Shift Close Agent",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    },
    "files": [
      "src/**/*",
      "electron/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": ".",
        "to": ".",
        "filter": [
          "agent.config.json"
        ]
      }
    ]
  }
}
